<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stockhawk_widget_list_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/stockhawk_widget_padding"
    android:paddingRight="@dimen/stockhawk_widget_padding"
    android:id="@+id/widget_box"
    >
    <TextView
        android:id="@+id/widget_stock_symbol"
        style="@style/StockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        tools:text="GOOG"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        >
        <TextView
            android:id="@+id/widget_bid_price"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/stockhawk_widget_bid_padding_right"
            android:paddingEnd="@dimen/stockhawk_widget_bid_padding_right"
            android:paddingStart="@dimen/stockhawk_widget_bid_padding_right"
            tools:text="1000.00"
            />
        <TextView
            android:id="@+id/widget_change"
            android:background="@drawable/percent_change_pill"
            style="@style/PercentChangeTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/stockhawk_widget_pill_padding"
            android:paddingStart="@dimen/stockhawk_widget_pill_padding"
            android:paddingEnd="@dimen/stockhawk_widget_pill_padding"
            android:paddingRight="@dimen/stockhawk_widget_pill_padding"
            tools:text="100%"
            />
    </LinearLayout>
</LinearLayout>